generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Cep {
  cep        String   @unique
  rua        String
  bairro     String
  cidade     String
  estado     String
  created_at DateTime @default(now())

  @@map("ceps")
}
